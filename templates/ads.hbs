<section>
    <h1 class="titleForm">Advertisements</h1>
    <div id="ads" class="ads">
        <table>
            <thead>
            <tr>
                <th>Title</th>
                <th>Publisher</th>
                <th>Description</th>
                <th>Price</th>
                <th>Date Published</th>
                <th>Views</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {{#each this}}
                <tr>
                    <td>{{this.title}}</td>
                    <td name="author">{{this.author}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.date}}</td>
                    <td>{{this.views}}</td>
                    <td name="actions">
                        <a name="btnDetails" href="#" onclick="loadAd('{{this._id}}')">[Details]</a>
                        <a name="btnDelete" href="#" onclick="deleteAd('{{this._id}}')">[Delete]</a>
                        <a name="btnEdit" href="#" onclick="renderEditView({{json this}})">[Edit]</a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</section>